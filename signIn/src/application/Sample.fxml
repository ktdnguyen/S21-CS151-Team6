<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="application.SampleController">
   <children>
      <Label text="Wallet Manager">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Label text="Sign In">
         <font>
            <Font size="20.0" />
         </font>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>
      <TextField fx:id="nameField" alignment="CENTER" promptText="Username">
         <VBox.margin>
            <Insets left="150.0" right="150.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Password">
         <VBox.margin>
            <Insets left="150.0" right="150.0" />
         </VBox.margin>
      </PasswordField>
      <Button fx:id="submitButton" mnemonicParsing="false" text="Submit"
      	onAction='#register'>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" text="Sign Up">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
   </children>
</VBox>
